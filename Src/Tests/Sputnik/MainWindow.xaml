<Window x:Class="IronJS.Tests.Sputnik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IronJS - Sputnik Conformance Tests" Height="449" Width="806">
    <Grid>
        <ProgressBar Height="40" Margin="311,84,12,0" Name="progressBar" VerticalAlignment="Top" />
        <TreeView Name="Tests" Margin="12,12,0,12" HorizontalAlignment="Left" Width="293" />
        <Label Content="Selected Test: " Padding="0,5" Height="28" HorizontalAlignment="Left" Margin="311,12,0,0" Name="label1" VerticalAlignment="Top" Width="86" FontWeight="Bold" />
        <TextBox Height="23" Margin="403,14,110,0" Name="selectedTestPath" VerticalAlignment="Top" Focusable="False" />
        <Button Content="Run" Click="run_Click" Height="23" HorizontalAlignment="Right" Margin="0,14,12,0" Name="button1" VerticalAlignment="Top" Width="86" />
        <Label Content="" HorizontalAlignment="Right" Margin="0,125,12,0" Name="progressText" VerticalAlignment="Top" Width="145" HorizontalContentAlignment="Right" />
        <Label Content="Passed: " Padding="0,5" Name="passedLabel" Height="28" HorizontalAlignment="Left" Margin="311,125,0,0" VerticalAlignment="Top" Width="75" />
        <Label Content="Failed: " Padding="0,5" Name="failedLabel" Height="28" HorizontalAlignment="Left" Margin="403,125,0,0" VerticalAlignment="Top" Width="75" />
        <Label Content="Running: " Padding="0,5" FontWeight="Bold" Height="28" HorizontalAlignment="Left" Margin="311,58,0,0" Name="label2" VerticalAlignment="Top" Width="86" />
        <ListView Margin="311,159,12,12" Name="failedTests" FontFamily="Consolas">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="150" Header="Name" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Width="500" Header="Assertion" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate x:Name="col1Template">
                                <TextBlock TextWrapping="WrapWithOverflow" Text="{Binding Path=Assertion}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Width="1200" Header="Exception" DisplayMemberBinding="{Binding Exception}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
