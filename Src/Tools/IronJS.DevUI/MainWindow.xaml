<Window x:Class="IronJS.DevUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="1200">
    <Grid>
        <TextBox HorizontalAlignment="Left" 
                 TextWrapping="Wrap" 
                 AcceptsTab="True" 
                 FontFamily="Consolas" 
                 VerticalScrollBarVisibility="Auto"
                 AcceptsReturn="True" 
                 Margin="12,12,0,41" 
                 Name="Input" 
                 Width="400" />
        
        <TextBox Height="51" 
                 Margin="418,12,12,0" 
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 FontFamily="Consolas"
                 Name="Result" 
                 IsReadOnly="True"
                 VerticalAlignment="Top" />
        
        <TextBox Margin="418,69,12,12" 
                 Name="Debug" 
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 FontFamily="Consolas"
                 IsReadOnly="True"
                 />
        
        <Button Content="Run" 
                HorizontalAlignment="Left" 
                Margin="337,0,0,12" 
                Name="RunCode"
                Width="75" 
                Height="23" 
                VerticalAlignment="Bottom" />
        
        <Button Content="Reset Environment" Margin="218,0,0,12" 
                Name="ResetEnv" HorizontalAlignment="Left" 
                Width="113" Height="23" VerticalAlignment="Bottom" />
    </Grid>
</Window>
