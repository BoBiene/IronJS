<Window x:Class="IronJS.DevUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="1200">
    <Grid>
        <TextBox HorizontalAlignment="Left" 
                 TextWrapping="Wrap" 
                 AcceptsTab="True" 
                 FontFamily="Consolas" 
                 VerticalScrollBarVisibility="Auto"
                 AcceptsReturn="True" 
                 Margin="12,12,0,41" 
                 Name="Input" 
                 Width="400" />
        
        <TextBox Height="51" 
                 Margin="704,29,12,0" 
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 FontFamily="Consolas"
                 Name="Result" 
                 IsReadOnly="True"
                 VerticalAlignment="Top" />
        
        <TextBox Margin="704,111,12,12" 
                 Name="Debug" 
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 TextWrapping="NoWrap"
                 FontFamily="Consolas"
                 IsReadOnly="True"
                 Visibility="Visible" />
        
        <Button Content="Run" 
                HorizontalAlignment="Left" 
                Margin="337,0,0,12" 
                Name="RunCode"
                Width="75" 
                Height="23" 
                VerticalAlignment="Bottom" />
        
        <Button Content="Reset Environment" 
                Margin="218,0,0,12" 
                Name="ResetEnv" 
                HorizontalAlignment="Left" 
                Width="113" 
                Height="23" 
                VerticalAlignment="Bottom" />
        
        <Label Content="Result (last statement executed):" 
               Height="28" 
               HorizontalAlignment="Left" 
               Margin="699,5,0,0" 
               Name="ResultLabel" 
               VerticalAlignment="Top" />
        
        <Label Content="Debug Output:" 
               Height="28" 
               HorizontalAlignment="Left" 
               Margin="704,86,0,0" 
               Name="DebugOutputLabel" 
               VerticalAlignment="Top" />
        
        <Label Content="Execution Time:" 
               Height="28" 
               Margin="12,0,0,7" 
               Name="ExecutionTimeLabel" 
               VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="93" />
        
        <Label Content="" 
               HorizontalAlignment="Left" 
               Margin="111,0,0,7" 
               Name="ExecutionTime" 
               Height="28" 
               VerticalAlignment="Bottom" />

        <TreeView Margin="418,29,0,12" 
                  Name="Variables" 
                  HorizontalAlignment="Left" 
                  Width="280">
        </TreeView>
        
        <Label Content="Environment:" 
               Height="28" 
               HorizontalAlignment="Left" 
               Margin="418,5,0,0" 
               Name="label1" 
               VerticalAlignment="Top" />
    </Grid>
</Window>
