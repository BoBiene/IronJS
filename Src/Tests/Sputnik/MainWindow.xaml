<Window x:Class="IronJS.Tests.Sputnik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IronJS - Sputnik Conformance Tests" Height="449" Width="860">
    <Grid>
        <ProgressBar Height="40" Margin="473,99,12,0" Name="progressBar" VerticalAlignment="Top" />
        <TreeView Name="Tests" Margin="12,12,0,0" HorizontalAlignment="Left" Width="455" Height="242" VerticalAlignment="Top" />
        <Label Content="Selected Test: " Padding="0,5" Height="28" HorizontalAlignment="Left" Margin="473,14,0,0" Name="label1" VerticalAlignment="Top" Width="86" FontWeight="Bold" />
        <TextBox Height="23" Margin="565,14,110,0" Name="selectedTestPath" VerticalAlignment="Top" Focusable="False" />
        <Button Content="Run" Click="run_Click" Height="23" HorizontalAlignment="Right" Margin="0,14,12,0" Name="button1" VerticalAlignment="Top" Width="86" />
        <Label Content="" HorizontalAlignment="Right" Margin="0,140,12,0" Name="progressText" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Right" />
        <Label Content="Passed: " Padding="0,5" Name="passedLabel" Height="28" HorizontalAlignment="Left" Margin="473,140,0,0" VerticalAlignment="Top" Width="119" />
        <Label Content="Failed: " Padding="0,5" Name="failedLabel" Height="28" HorizontalAlignment="Left" Margin="598,140,0,0" VerticalAlignment="Top" Width="100" />
        <Label Content="Progress" Padding="0,5" FontWeight="Bold" Height="28" HorizontalAlignment="Left" Margin="473,73,0,0" VerticalAlignment="Top" Width="86" />

        <ListView Margin="473,214,12,12" Name="failedTests" FontFamily="Consolas">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="150" Header="Name" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Width="500" Header="Assertion" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate x:Name="col1Template">
                                <TextBlock TextWrapping="WrapWithOverflow" Text="{Binding Path=Assertion}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Width="1200" Header="Exception" DisplayMemberBinding="{Binding Exception}" />
                </GridView>
            </ListView.View>
        </ListView>
        <CheckBox Content="Don't Catch Exeptions" Height="16" HorizontalAlignment="Left" Margin="565,43,0,0" Name="debugBox" VerticalAlignment="Top" />
        <Button Content="Open" Height="23" HorizontalAlignment="Left" Margin="473,181,0,0" Name="button2" VerticalAlignment="Top" Width="75" Click="button2_Click" />
        <TextBox Height="23" BorderThickness="0" Margin="0,73,12,0" Focusable="False" Name="currentTest" VerticalAlignment="Top" HorizontalAlignment="Right" HorizontalContentAlignment="Right" Width="120" />

        <Button Content="Run" Height="23" HorizontalAlignment="Left" Margin="554,181,0,0" Name="button3" VerticalAlignment="Top" Width="75" Click="button3_Click" />
        <ScrollViewer Margin="12,291,0,12" HorizontalAlignment="Left" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Width="455">
            <TextBlock Name="exprTree" Text=""  />
        </ScrollViewer>
        <CheckBox Content="Show Expression Trees" FontWeight="Bold" Height="22" HorizontalAlignment="Left" Margin="12,265,0,0" Name="showExprTreesChk" VerticalAlignment="Top" />
    </Grid>
</Window>
